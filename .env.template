# ==========================================
# USHADOW CONFIGURATION TEMPLATE
# ==========================================
# Copy this file to .env and customize values, or run ./quickstart.sh
# DO NOT COMMIT .env TO VERSION CONTROL!

# ==========================================
# ENVIRONMENT & PROJECT NAMING
# ==========================================
ENV_NAME=ushadow
COMPOSE_PROJECT_NAME=ushadow
NODE_ENV=development

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# Generate secure random keys:
#   openssl rand -hex 32
AUTH_SECRET_KEY=your-super-secret-key-here-make-it-random-and-long
SESSION_SECRET=your-session-secret-here-make-it-random-and-long

# Admin account credentials
ADMIN_NAME=admin
ADMIN_EMAIL=admin@ushadow.local
ADMIN_PASSWORD=change-this-password

# ==========================================
# DATABASE CONFIGURATION (Shared Infrastructure)
# ==========================================
# MongoDB settings
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=ushadow

# Redis settings
REDIS_URL=redis://redis:6379/0
REDIS_DATABASE=0

# Qdrant vector database
QDRANT_BASE_URL=qdrant
QDRANT_PORT=6333

# ==========================================
# PORT CONFIGURATION
# ==========================================
# Port offset for multi-worktree environments (0, 100, 200, 300)
PORT_OFFSET=0

# ushadow application ports
USHADOW_BACKEND_PORT=8080
USHADOW_FRONTEND_PORT=3000

# Chronicle integration port
CHRONICLE_PORT=8000

# ==========================================
# CHRONICLE INTEGRATION
# ==========================================
# Chronicle backend URL (internal Docker network)
CHRONICLE_URL=http://chronicle-backend:8000

# Chronicle API URL (external access)
CHRONICLE_API_URL=http://localhost:8000

# Chronicle API timeout (seconds)
CHRONICLE_API_TIMEOUT=30

# ==========================================
# CORS & FRONTEND CONFIGURATION
# ==========================================
# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Frontend API URLs (used during build)
VITE_API_URL=http://localhost:8080
VITE_CHRONICLE_URL=http://localhost:8000

# ==========================================
# MCP INTEGRATION (Model Context Protocol)
# ==========================================
MCP_SERVER_URL=http://mcp-server:8765
MCP_ENABLED=false

# MCP connection timeout (seconds)
MCP_TIMEOUT=30

# ==========================================
# AGENT ZERO INTEGRATION
# ==========================================
AGENT_ZERO_URL=http://agent-zero:9000
AGENT_ZERO_ENABLED=false

# Agent Zero API timeout (seconds)
AGENT_ZERO_TIMEOUT=60

# ==========================================
# N8N WORKFLOW AUTOMATION
# ==========================================
N8N_URL=http://n8n:5678
N8N_ENABLED=false

# n8n webhook base URL
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ==========================================
# LLM & AI SERVICE CONFIGURATION
# ==========================================
# Primary LLM provider: openai, anthropic, ollama
LLM_PROVIDER=openai

# OpenAI configuration
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama configuration (local LLM)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:latest

# ==========================================
# SPEECH & TRANSCRIPTION SERVICES
# ==========================================
# Transcription provider: deepgram, mistral, whisper
TRANSCRIPTION_PROVIDER=deepgram

# Deepgram API
DEEPGRAM_API_KEY=

# Mistral API
MISTRAL_API_KEY=
MISTRAL_MODEL=pixtral-12b-2409

# ==========================================
# KUBERNETES CONFIGURATION (Optional)
# ==========================================
# Container registry for K8s deployments
CONTAINER_REGISTRY=ghcr.io/ushadow-io

# K8s namespace
K8S_NAMESPACE=ushadow

# Image pull policy
IMAGE_PULL_POLICY=IfNotPresent

# ==========================================
# LOGGING & OBSERVABILITY (Optional)
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging
LOG_JSON=false

# Sentry error tracking
SENTRY_DSN=

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
ENABLE_WIZARD=true
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false

# ==========================================
# DEVELOPMENT & DEBUG SETTINGS
# ==========================================
# Enable debug mode
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
