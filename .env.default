# ushadow Default Configuration
# Committed to repository - provides base defaults

# ==========================================
# DOCKER COMPOSE PROJECT NAME
# ==========================================
COMPOSE_PROJECT_NAME=ushadow

# ==========================================
# DATABASE CONFIGURATION (Shared Infrastructure)
# ==========================================
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=ushadow
REDIS_URL=redis://redis:6379/0
REDIS_DATABASE=0

# ==========================================
# NETWORK CONFIGURATION (Application Ports)
# ==========================================
PORT_OFFSET=0
BACKEND_PORT=8010
WEBUI_PORT=3010
HOST_IP=localhost

# CORS with variable substitution support
CORS_ORIGINS=http://localhost:${WEBUI_PORT:-3010},http://127.0.0.1:${WEBUI_PORT:-3010}
VITE_BACKEND_URL=http://localhost:${BACKEND_PORT:-8010}

# ==========================================
# TEST ENVIRONMENT PORTS
# ==========================================
TEST_BACKEND_PORT=8011
TEST_WEBUI_PORT=3011

# ==========================================
# AUTHENTICATION & API KEYS
# ==========================================
AUTH_SECRET_KEY=dev-secret-key-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production
ADMIN_NAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# ==========================================
# INTEGRATION URLS
# ==========================================
CHRONICLE_URL=http://chronicle-backend:8000
MCP_SERVER_URL=http://mcp-server:8765
AGENT_ZERO_URL=http://agent-zero:9000
N8N_URL=http://n8n:5678

# ==========================================
# FEATURE FLAGS
# ==========================================
MCP_ENABLED=false
AGENT_ZERO_ENABLED=false
N8N_ENABLED=false

# ==========================================
# API KEYS (Set in .env)
# ==========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPGRAM_API_KEY=
MISTRAL_API_KEY=
